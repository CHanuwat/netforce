<form model="address">
    <field name="type"/>
    <field name="first_name"/>
    <field name="last_name"/>
    <field name="company"/>
    <field name="address"/>
    <field name="address2"/>
    <field name="unit_no" attrs='{"invisible": [["type","!=","reporting"]]}'/>
    <field name="floor" attrs='{"invisible": [["type","!=","reporting"]]}'/>
    <field name="bldg_name" attrs='{"invisible": [["type","!=","reporting"]]}'/>
    <field name="bldg_no" attrs='{"invisible": [["type","!=","reporting"]]}'/>
    <field name="village" attrs='{"invisible": [["type","!=","reporting"]]}'/>
    <field name="soi" attrs='{"invisible": [["type","!=","reporting"]]}'/>
    <field name="moo" attrs='{"invisible": [["type","!=","reporting"]]}'/>
    <field name="street" attrs='{"invisible": [["type","!=","reporting"]]}'/>
    <field name="city"/>
    <field name="postal_code"/>
    <field name="country_id"/>
    <field name="province_id" condition='[["country_id","=",country_id]]'/>
    <field name="district_id" condition='[["province_id","=",province_id]]'/>
    <field name="subdistrict_id" condition='[["district_id","=",district_id]]'/>
    <field name="phone"/>
</form>
