<v:page title="Product Stock">
    <v:flash/>
    {{include "stock_balance_search" context=context}}
    <v:button string="New Purchase Order" method="make_po" size="small" icon="plus-sign"/>
    <v:button string="Search" action="_search" icon="search" size="small" pull="right"/>
    <v:list>
        <bgcolor>{{#if context.data.below_min}}#f00{{/if}}</bgcolor>
        <field name="product_id"/>
        <field name="location_id"/>
        <field name="qty_phys"/>
        <field name="qty_virt"/>
        <field name="min_qty"/>
        <field name="uom_id"/>
        <field name="below_min" invisible="1"/>
    </v:list>
</v:page>
