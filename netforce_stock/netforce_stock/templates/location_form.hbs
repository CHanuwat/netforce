<v:bread>
    <v:bread_item string="Locations" action="location_all"/>
</v:bread>
<v:page title="{{#if context.data.id}}Edit{{else}}New{{/if}} Location">
    <v:form_body background="1">
        <v:field name="name"/>
        <v:field name="type"/>
        <v:field name="account_id"/>
        <v:field name="uuid" invisible="1"/>
    </v:form_body>
    <v:form_foot>
        <v:button string="Save" method="_save" size="large" type="primary" next="location_all"/>
    </v:form_foot>
</v:page>
<v:history uuid="{{context.data.uuid}}"/>
