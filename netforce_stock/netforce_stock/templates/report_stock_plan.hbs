<center>
    <h2>
        Stock Planning
    </h2>
    <h3>
        {{company_name}}
    </h3>
</center>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Product Code</th>
            <th>Product Name</th>
            <th>Planning Horizon (days)</th>
            <th>Planned Qty</th>
            <th>Order Qty</th>
        </tr>
    <tbody>
        {{#each lines context=context}}
            <tr>
                <th>{{product_code}}</th>
                <th>{{product_name}}</th>
                <th>{{plan_days}}</th>
                <th>{{plan_qty}}</th>
                <th>{{order_qty}}</th>
            </tr>
        {{/each}}
    </tbody>
</table>
