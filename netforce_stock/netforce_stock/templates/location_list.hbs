<v:flash/>
{{include "location_search" context=context}}
{{#if context.archived}}
    <v:button string="Restore" method="_restore" size="small"/>
{{else}}
    <v:button string="Delete" method="_delete" type="danger" size="small"/>
    <v:button string="Archive" method="_archive" size="small"/>
    <v:button string="Export" action="location_export" size="small" select="1"/>
{{/if}}
<v:button string="Search" action="_search" icon="search" size="small" pull="right"/>
<v:list action="location_edit">
    <field name="name"/>
    <field name="type"/>
</v:list>
