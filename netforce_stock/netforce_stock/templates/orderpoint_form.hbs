<v:bread>
    <v:bread_item string="Minimum Stock Rules" action="orderpoint_all"/>
</v:bread>
<v:page title="{{#if context.data.id}}Edit{{else}}New{{/if}} Stock Rule">
    <v:flash/>
    <v:form border="1">
        <v:form_body background="1">
            <v:row>
                <v:field name="location_id" span="2"/>
                <v:field name="product_id" span="2"/>
                <v:field name="min_qty" span="2"/>
                <v:field name="max_qty" span="2"/>
                <v:field name="uom_id" span="2"/>
            </v:row>
            <v:field name="uuid" invisible="1"/>
        </v:form_body>
        <v:form_foot>
            <v:button string="Save" method="_save" size="large" type="primary" next="orderpoint_all"/>
        </v:form_foot>
    </v:form>
    <v:history uuid="{{context.data.uuid}}"/>
</v:page>
