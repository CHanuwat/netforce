contact.py
_fields={
        "coupons": fields.One2Many("sale.coupon", "contact_id", "Coupons"),

        "request_product_groups": fields.Many2Many("product.group","Request Product
                                                   Groups",reltable="m2m_contact_request_product_groups",relfield="contact_id",relfield_other="group_id"),
                                                   # Ecom
        "exclude_product_groups": fields.Many2Many("product.group","Exclude Product
                                                   Groups",reltable="m2m_contact_exclude_product_groups",relfield="contact_id",relfield_other="group_id"),
                                                   # Ecom

        }

