<form model="service.contract.template">
    <head>
        <button string="Options" dropdown="1">
            <item string="Copy" method="copy"/>
        </button>
    </head>
    <field name="name"/>
    <field name="description"/>
    <separator string="Service Order Templates"/>
    <field name="jobs" nolabel="1">
        <list>
            <field name="counter"/>
            <field name="job_template_id"/>
            <field name="description"/>
            <field name="amount_labor"/>
            <field name="amount_part"/>
            <field name="amount_other"/>
            <field name="amount_total"/>
        </list>
    </field>
    <group span="4" offset="8" columns="1">
        <field name="amount_labor"/>
        <field name="amount_part"/>
        <field name="amount_other"/>
        <field name="amount_total"/>
    </group>
    <related>
        <field name="comments"/>
    </related>
</form>
