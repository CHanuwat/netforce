<form model="service.contract">
    <head>
        <field name="state"/>
        <button string="Options" dropdown="1">
            <item string="Create Service Orders" method="create_jobs"/>
            <item string="Create Next Invoice" method="create_invoice"/>
        </button>
    </head>
    <group form_layout="stacked">
        <field name="number" span="2"/>
        <field name="contact_id" span="2"/>
        <field name="project_id" span="2"/>
        <newline/>
        <field name="start_date" span="2"/>
        <field name="end_date" span="2"/>
        <field name="state" span="2"/>
    </group>
    <field name="lines" nolabel="1">
        <list>
            <field name="service_item_id" condition='[["contact_id","=",parent.contact_id]]'/>
            <field name="template_id" onchange="onchange_template"/>
            <field name="amount_labor"/>
            <field name="amount_part"/>
            <field name="amount_other"/>
            <field name="amount_total"/>
            <field name="account_id"/>
        </list>
    </field>
    <group span="7">
        <field name="incl_labor"/>
        <field name="incl_part"/>
        <field name="incl_other"/>
    </group>
    <group span="4" columns="1">
        <field name="amount_labor"/>
        <field name="amount_part"/>
        <field name="amount_other"/>
        <field name="amount_total"/>
        <field name="amount_contract"/>
    </group>
    <separator string="Invoice Details"/>
    <group form_layout="stacked">
        <field name="invoice_period" span="2" onchange="onchange_period"/>
        <field name="num_periods" span="2"/>
        <field name="next_invoice_date" span="2"/>
    </group>
    <related>
        <field name="invoices"/>
        <field name="jobs"/>
        <field name="documents">
            <list>
                <field name="file" target="_blank"/>
                <field name="categ_id"/>
                <field name="description"/>
                <field name="date"/>
                <field name="expiry_date"/>
            </list>
            <form>
                <field name="categ_id"/>
                <field name="file" target="_blank" onchange="onchange_file"/>
                <field name="date"/>
                <field name="description"/>
                <field name="expiry_date"/>
            </form>
        </field>
        <field name="comments"/>
    </related>
</form>
